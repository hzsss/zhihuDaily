# Uncomment the next line to define a global platform for your project
# platform :ios, '8.0'

target 'zhihuDaily' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  pod 'Alamofire'

  # 网络库
  pod 'Moya'
  
  #网络状态检测
  pod 'ReachabilitySwift'

  # json解析
  pod 'SwiftyJSON'
  
  # 弹窗
  pod 'FTIndicator'
  
  # 图片库
  pod 'Kingfisher'
  
  # 数据库
  pod 'WCDB.swift'
  
  # SnapKit 动态布局
  pod 'SnapKit'

  pod 'SwiftyTimer'
  
  # 'MJRefresh' 上拉下拉库
  pod 'MJRefresh'
  
  # 缺省页
  pod 'DZNEmptyDataSet'
  
end
